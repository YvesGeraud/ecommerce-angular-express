# Configuración del servidor
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000

# Base de datos (configuración local)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=ecommerce_db
DB_USER=root
DB_PASSWORD=

# Prisma Database URL
DATABASE_URL="mysql://root:@localhost:3306/ecommerce_db"

# JWT
JWT_SECRET=dev_jwt_secret_key_change_in_production
JWT_EXPIRES_IN=7d

# Bcrypt
BCRYPT_ROUNDS=12

# Archivos
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_IMAGES=jpg,jpeg,png,gif,webp
ALLOWED_DOCUMENTS=pdf,doc,docx

# Correos (para desarrollo)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=Tu Ecommerce

# Pagos (para desarrollo)
STRIPE_PUBLIC_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_secret
WEBHOOK_SECRET=dev_webhook_secret

# Logging
LOG_LEVEL=debug
LOG_FILE=./logs/app.log
